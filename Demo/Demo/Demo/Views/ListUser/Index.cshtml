@{
    Layout = null;
}
@model List<ListUserViewModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List</title>
    <link rel="stylesheet" href="./asset/css/reset.css" />
    <link rel="stylesheet" href="./asset/css/bootstrap.min.css" />
    <link rel="stylesheet" href="./asset/css/log_reg.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>
<body>
    <!-- Background -->
    <div class="background">
        <div class="container d-flex justify-content-center">
            <div class="full-height d-flex align-items-center">
                <!-- Login - Register -->
                <div class="log-reg">
                    <div class="row">
                        <!-- Right Side -->
                        <div class="log-reg-r col-12">
                            <h2 class="log-reg-r__title __tile-reg text-center">
                                List
                            </h2>
                            <p class="log-reg-r__intro text-center d-none d-md-block">
                                List user page
                            </p>
                            <!-- Table -->
                            <div class="table-responsive-sm">
                                <table class="table" id="rwd-table">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">ID</th>
                                            <th scope="col">Full Name</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Role</th>
                                            <th scope="col">Edit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Count; i++)
                                        {
                                            <tr>
                                                <th scope="row">@i</th>
                                                <td>@Model[i].fullName</td>
                                                <td>@Model[i].email</td>
                                                <td>@Model[i].roles.SingleOrDefault()</td>
                                                <td>
                                                    <a asp-action="EditUser" asp-controller="ListUser" asp-route-idUser="@Model[i].id">
                                                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                                    </a>
                                                    <a asp-action="DeleteUser" asp-controller="ListUser" asp-route-idUser="@Model[i].id">
                                                        <i class="fa fa-times" aria-hidden="true"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- Button -->
                            <button type="submit" class="btn btn-primary button-primary">
                                Save
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>